generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Problem {
  id                  String    @id
  continent           String
  country             String?
  city                String?
  title               String
  description         String
  urgencyPercent      Int
  affectedPopulation  Int
  criticalTimeframe   String
  tagsJson            String
  imageUrl            String
  lastUpdated         DateTime
  solutions           Solution[]
}

model Solution {
  id         String   @id
  problem    Problem  @relation(fields: [problemId], references: [id])
  problemId  String
  author     String
  timePosted DateTime
  content    String
  votes      Int      @default(0)
}

model Activist {
  id                Int     @id @default(autoincrement())
  name              String
  continent         String
  xHandle           String  @unique
  handleConfidence  String
}

model ActivistProfile {
  username        String   @id
  displayName     String
  description     String
  profileImageUrl String?
  fetchedAt       DateTime?
}

model Report {
  id                Int      @id @default(autoincrement())
  title             String
  description       String
  location          String
  affectedPopulation Int?
  urgency           Int
  tagsJson          String
  timeframe         String
  createdAt         DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
